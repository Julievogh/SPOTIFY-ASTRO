---
const { header, text, imgSrc, hasSearch } = Astro.props;
import ButtonNew from "../components/ButtonNew.astro";
import RightSideContainer from "../components/RightSideContainer.astro";

---

<article>
 
  <img src={imgSrc} />
  <h3>{header}</h3>
  <p>{text}</p>
  {hasSearch && <ButtonNew title="New Button" />}
</article>

<style>
 article {
    background-color: rgb(31, 31, 34);
    margin: 0 1rem 0.5rem 0;
    padding: 1rem 1rem 0rem 1rem;
    border-radius: 10px;
    justify-content: center;
    align-items: center;
    max-width: 180px;
    max-height: auto;
    position: relative;
    transition: background-color 0.3s, opacity 0.3s;
    cursor: pointer;
  }

    article:hover {
    background-color: #383b3d; 
    opacity: 0.8;
  }

  img {
    max-width: 100%;
    margin-bottom: -40px;
    border-radius: 6px;
  }
  h3 {
    margin: 2.4rem 0 0 0;
    padding: 0;
  }

  p {
color: #88898a;
font-family: 'Spotify-2';
  }


</style>
